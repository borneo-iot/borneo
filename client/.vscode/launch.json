    "version": "0.2.0",
    "configurations": [
        {
            "name": "app",
            "request": "launch",
            "type": "dart",
            "program": "${workspaceFolder}/lib/main.dart",
            "flutterMode": "debug"
        },
        {
            "name": "app (profile mode)",
            "request": "launch",
            "type": "dart",
            "program": "${workspaceFolder}/lib/main.dart",
            "flutterMode": "profile"
        },
        {
            "name": "app (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release",
            "program": "${workspaceFolder}/lib/main.dart",
            "args": [
                "--dart-define=ENV=prod"
            ]
        },
    ]
}